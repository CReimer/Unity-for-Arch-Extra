pkgname=python2-magic
pkgver=5.15
pkgrel=100
pkgdesc="Python 2 bindings for file"
arch=('any')
url="http://www.darwinsys.com/file/"
license=('custom')
groups=('unity-extra')
depends=('python2' 'file')
options=(!emptydirs)
source=("ftp://ftp.astron.com/pub/file/file-${pkgver}.tar.gz")
sha512sums=('390530832953c23099422c21b7159903fc6850999c6561b9d641318212d4c8e2bc768932cf8af0f545fac861a49f7389ce763b6e3b7d3832beba5281f0290e2b')

package() {
  cd "${srcdir}/file-${pkgver}/python/"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
}

