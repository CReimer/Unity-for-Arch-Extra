# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>

pkgname=unity-webapps
pkgver=2.4.6
pkgrel=100
pkgdesc="Unity WebApps"
arch=('i686' 'x86_64')
url="https://launchpad.net/webapps-applications"
license=('GPL')
groups=('unity-extra')
depends=('gjs' 'gtk3' 'libunity-webapps' 'libwebkit3')
makedepends=('python-polib')
source=("https://launchpad.net/webapps-applications/trunk/2.6/+download/webapps-${pkgver}.tar.gz")
sha512sums=('27cef2349536a61542d711eb93eb35029b4e266db625100a0e4084547088fdbf49c29a2089af8b8837bc8743aef83f1bf337f238d506666ed64a758ef4d87c29')

build() {
  cd "${srcdir}/webapps-${pkgver}"
  ./configure --prefix=/usr --enable-applications --enable-default-applications
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/webapps-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

# vim:set ts=2 sw=2 et:
