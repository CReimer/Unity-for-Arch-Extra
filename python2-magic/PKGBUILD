pkgname=python2-magic
pkgver=5.16
pkgrel=1
pkgdesc="Python 2 bindings for file"
arch=('any')
url="http://www.darwinsys.com/file/"
license=('custom')
groups=('unity-extra')
depends=('python2' 'file')
options=(!emptydirs)
source=("ftp://ftp.astron.com/pub/file/file-${pkgver}.tar.gz")
sha512sums=('21c5747bc6973697b7ca2ec5613b3b2f321ad1b6b7c6258a7c302509b7ff73436ebed8e5508fd68fbd49448feefe6a5431a646ae807056aea52cbb22836e3a9b')

package() {
  cd "${srcdir}/file-${pkgver}/python/"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
}

